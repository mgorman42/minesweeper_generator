<h1> <%= @board.name %> </h1>
<h3> by: <%= @board.email %> </h3>
<table class="board">
  <% @board.as_2d_array.each do |row| %>
    <tr>
      <% row.each do |tile| %>
        <td>
          <% if tile %>
            <i class='fa-solid fa-bomb'></i>
          <% else %>
            <i class='fa-regular fa-square'></i>
          <% end %>
        </td>
      <% end %>
    </tr>
  <% end %>
</table>
<div>
  <%= link_to "List of latest Boards", boards_path %>
</div>
