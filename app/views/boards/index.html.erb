<h1> <%= "Recent" unless params[:show_all] %> Minesweeper Boards</h1>

<table id="boards" class="table table-striped">
  <thead>
    <tr>
      <th scope="col"> Name </th>
      <th scope="col"> Email </th>
      <th scope="col"> Creation Date </th>
    </tr>
  </thead>
  <% @boards.each do |board| %>
    <tr>
      <td> <%= link_to board.name, board %> </td>
      <td> <%= board.email %> </td>
      <td> <%= board.created_at.strftime("%B %e, %Y") %> </td>
    </tr>
  <% end %>
</table>

<div class="row mb-1"> <%= link_to "New board", new_board_path, class: "btn btn-secondary" %> </div>
<div class="row mb-1"> 
  <% if params[:show_all] %>
    <%= link_to "View latest boards", boards_path, class: "btn btn-secondary" %>
  <% else %>
    <%= link_to "View all generated boards", boards_path(show_all: true), class: "btn btn-secondary" %>
  <% end %>
</div>
