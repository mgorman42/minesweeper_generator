<div class="row"> <h1> <%= @board.name %> </h1> </div>
<div class="row"><h3> by: <%= @board.email %> </h3> </div>
<div class="row">
  <div class="sm-col overflow-auto">
    <%= turbo_frame_tag(
      "tiles-page-0",
      loading: :lazy,
      src: board_tiles_path(board_id: @board.id, page: 0),
    ) do %>
    Loading...
  <% end %>
  </div>
</div>
<div class="row mb-1"> <%= link_to "New board", new_board_path, class: "btn btn-secondary" %> </div>
<div class="row mb-1"> <%= link_to "List of latest Boards", boards_path, class: "btn btn-secondary" %> </div>
<div class="row mb-1"> <%= link_to "View all generated boards", boards_path(show_all: true), class: "btn btn-secondary" %> </div>
